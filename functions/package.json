{
  "name": "functions",
  "scripts": {
    "build": "tsc",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "dev": "firebase emulators:start",
    "deploy": "firebase deploy --only functions",
    "deploy-dev": "firebase use dev && firebase deploy",
    "deploy-prod": "firebase use prod && firebase deploy",
    "logs": "firebase functions:log",
    "fetch-schema": "apollo-codegen introspect-schema https://us-central1-platter-app-dev.cloudfunctions.net/api --output schema.json",
    "generate-types": "graphql-codegen --config codegen.yml"
  },
  "engines": {
    "node": "8"
  },
  "main": "lib/index.js",
  "dependencies": {
    "apollo-server-express": "^2.12.0",
    "express": "^4.17.1",
    "firebase-admin": "^8.11.0",
    "firebase-functions": "^3.6.1",
    "firebase-tools": "^8.2.0",
    "graphql": "^15.0.0",
    "lodash": "^4.17.15"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^1.13.4",
    "@graphql-codegen/typescript-document-nodes": "^1.13.4",
    "@graphql-codegen/typescript-resolvers": "^1.13.4",
    "firebase-functions-test": "^0.2.0",
    "typescript": "^3.8.0"
  },
  "private": true
}
